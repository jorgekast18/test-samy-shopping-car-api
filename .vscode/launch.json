{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug NestJS",
        "program": "${workspaceFolder}/src/main.ts",
        "preLaunchTask": "npm: build",
        "outFiles": ["${workspaceFolder}/dist/**/*.js"],
        "autoAttachChildProcesses": true,
        "protocol": "inspector",
        "restart": true
      }
    ]
  }